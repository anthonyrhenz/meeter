# ---- Core Project ----
COMPOSE_PROJECT_NAME=meeter
ENVIRONMENT=development      # development | staging | production
SERVER_NAME=meeter.local     # used by Nginx in dev; override per env
HTTP_PORT=80
HTTPS_PORT=443

# ---- Postgres ----
DB_HOST=db
DB_PORT=5432
DB_NAME=meeter
DB_USER=compuj
DB_PASSWORD=alpine

# ---- Django ----
DJANGO_SECRET_KEY=change-me
DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,meeter.local,*.ngrok.dev
DISABLE_SSL=1

# CSRF/CORS
CSRF_TRUSTED_ORIGINS=http://localhost,https://*.ngrok.dev,http://localhost:5173,http://localhost:1420
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:1420

# Optional apps toggle (comma separated Django app configs)
DJANGO_OPTIONAL_APPS=

# ---- Redis / Celery ----
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_WORKER_CONCURRENCY=2

# ---- Channels ----
CHANNELS_REDIS_URL=redis://redis:6379/1

# ---- LiteLLM Router ----
LITELLM_MASTER_KEY=sk-1234
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# ---- Frontend (Vite) ----
VITE_API_URL=
VITE_API_SAME_HOST=true
VITE_WS_URL=
VITE_PUBLIC_POSTHOG_KEY=
VITE_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# ---- Debugging ----
DEBUGPY=false
